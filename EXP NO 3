import cv2

cap = cv2.VideoCapture(0) 
delay = 30  

print("Press 's' = Slow, 'f' = Fast, 'n' = Normal, 'q' = Quit")

while True:
    ret, frame = cap.read()
    if not ret:
        break

    cv2.imshow("Webcam Video", frame)
    key = cv2.waitKey(delay) & 0xFF

    if key == ord('q'):  
        break
    elif key == ord('s'):  
        delay = 100
    elif key == ord('f'):  
        delay = 10
    elif key == ord('n'):  
        delay = 30

cap.release()
cv2.destroyAllWindows()
