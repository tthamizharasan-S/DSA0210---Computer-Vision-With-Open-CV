import cv2
from google.colab.patches import cv2_imshow 
image_path = '/content/image cv5.jpeg'
img = cv2.imread(image_path)
if img is None:
    print(f"Error: Could not load image from {image_path}. Please check the path and file format.")
else:
    clockwise = cv2.rotate(img, cv2.ROTATE_90_CLOCKWISE)
    anticlockwise = cv2.rotate(img, cv2.ROTATE_90_COUNTERCLOCKWISE)

    cv2_imshow(img)
    cv2_imshow(clockwise) 
    cv2_imshow(anticlockwise)
