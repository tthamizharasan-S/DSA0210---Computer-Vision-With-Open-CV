import cv2
from google.colab.patches import cv2_imshow
img = cv2.imread("/content/zeep image.jpeg")  
print("Original Image")
cv2_imshow(img)
bigger = cv2.resize(img, None, fx=2, fy=2, interpolation=cv2.INTER_LINEAR)
print("Bigger Image (1x)")
cv2_imshow(bigger)
smaller = cv2.resize(img, None, fx=0.5, fy=0.5, interpolation=cv2.INTER_AREA)
print("Smaller Image (0.5x)")
cv2_imshow(smaller)
