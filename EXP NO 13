import cv2
import numpy as np
from google.colab.patches import cv2_imshow

img = cv2.imread('/content/Bike1.jpg', cv2.IMREAD_GRAYSCALE)

sobelx = cv2.Sobel(img, cv2.CV_64F, 1, 0, ksize=3)

sobelx = cv2.convertScaleAbs(sobelx)

cv2_imshow(img)
cv2_imshow(sobelx)

cv2.waitKey(0)
cv2.destroyAllWindows()
