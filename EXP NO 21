import cv2
import numpy as np
from google.colab.patches import cv2_imshow

img = cv2.imread("/content/WhatsApp Image 2025-12-28 at 5.18.25 PM.jpeg", 0)

gx = cv2.Sobel(img, -1, 1, 0, ksize=3)
gy = cv2.Sobel(img, -1, 0, 1, ksize=3)

gradient = cv2.addWeighted(gx, 0.5, gy, 0.5, 0)

cv2_imshow(gradient)
cv2.waitKey(0)
